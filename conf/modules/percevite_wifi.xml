<!DOCTYPE module SYSTEM "module.dtd">

<module name="percevite_wifi">
  <doc>
    <description>UART to transfer GPS co-ordinates of pprz to esp32 by ssid beacon broadcast over WiFi</description>
  </doc>
  <header>
    <file name="percevite_wifi.h"/>
  </header>
  <init fun="percevite_wifi_init()"/>
  <periodic fun="percevite_wifi_tx_loop()" freq="30.0" autorun="TRUE"/>
  <event fun="percevite_wifi_rx_event()"/>
  <makefile>
    <file name="percevite_wifi.c"/>
    <configure name="ESP_UART_PORT" default="uart2" case="upper|lower"/>
    <configure name="ESP_UART_BAUD" default="B115200"/>
    <define name="ESP_UART_PORT" value="$(ESP_UART_PORT_LOWER)"/>
    <define name="USE_$(ESP_UART_PORT_UPPER)"/>
    <define name="$(ESP_UART_PORT_UPPER)_BAUD" value="$(ESP_UART_BAUD)"/>
  </makefile>
</module>

